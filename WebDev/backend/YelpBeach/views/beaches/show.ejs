<%include ../partials/header %>

<h3> <%=theBeach.name%></h3>

<img src="<%= theBeach.image %>">

<p><%=theBeach.description%></p>

<p>
  <a class="btn btn-success" href="/beaches/<%= theBeach._id %>/comments/new">Add a New Comment</a>
</p>

<%theBeach.comments.forEach( (comment) => { %>

     <p><strong><%= comment.author %></strong></p>
     <p><%= comment.text %></p>

<% } ) %>


<%include ../partials/footer %>
